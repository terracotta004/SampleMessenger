@page "/login"
@using MauiMessenger.Core.DTOs

<PageTitle>Login</PageTitle>

<section class="auth-shell">
    <div class="auth-card">
        <div class="auth-header">
            <p class="auth-eyebrow">Account</p>
            <h1>Login</h1>
            <p class="auth-subtitle">Sign in to load and send messages in conversations.</p>
        </div>

        <EditForm Model="login" OnValidSubmit="LoginAsync" FormName="login">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label class="form-label">Username</label>
                <InputText class="form-control" @bind-Value="login.Username" placeholder="e.g. alex" />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <InputText class="form-control" @bind-Value="login.Password" type="password" placeholder="Enter password" />
            </div>

            <button class="btn btn-primary w-100" type="submit" disabled="@isSubmitting">
                @(isSubmitting ? "Signing in..." : "Log in")
            </button>
        </EditForm>

        @if (!string.IsNullOrWhiteSpace(errorMessage))
        {
            <div class="alert alert-danger mt-3 mb-0">@errorMessage</div>
        }

        @if (CurrentUserState.CurrentUser is not null)
        {
            <div class="alert alert-success mt-3 mb-0">
                Logged in as <strong>@CurrentUserState.CurrentUser.DisplayName</strong>.
            </div>
        }
    </div>
</section>

