@page "/conversations"
@using Microsoft.AspNetCore.SignalR.Client
@implements IAsyncDisposable

<PageTitle>Conversations</PageTitle>

@if (CurrentUserState.CurrentUser is null)
{
    <section class="chat-page">
        <div class="chat-page-header">
            <div>
                <p class="page-eyebrow">Messaging</p>
                <h1>Conversations</h1>
                <p class="page-subtitle">Sign in to view and send messages.</p>
            </div>
        </div>

        <div class="alert alert-warning">
            Please log in to view conversations.
            <a class="ms-2" href="login">Go to login</a>
        </div>

        @if (!string.IsNullOrWhiteSpace(errorMessage))
        {
            <div class="alert alert-danger mt-3">@errorMessage</div>
        }
    </section>
}
else
{
    <section class="chat-page">
        <div class="chat-page-header">
            <div>
                <p class="page-eyebrow">Messaging</p>
                <h1>Conversations</h1>
                <p class="page-subtitle">Create chats, open a thread, and send messages in real time.</p>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-12 col-lg-4">
                <div class="card panel-card mb-3">
                    <div class="card-header">Start a new conversation</div>
                    <div class="card-body">
                        <EditForm Model="newConversation" OnValidSubmit="CreateConversationAsync" FormName="create-conversation">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <div class="mb-3">
                                <label class="form-label">User</label>
                                <InputSelect class="form-select" @bind-Value="newConversation.UserId">
                                    <option value="">Select a user</option>
                                    @foreach (var user in availableUsers)
                                    {
                                        <option value="@user.Id">@user.DisplayName (@user.Username)</option>
                                    }
                                </InputSelect>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Title (optional)</label>
                                <InputText class="form-control" @bind-Value="newConversation.Title" />
                            </div>

                            <button class="btn btn-primary" type="submit" disabled="@isSaving">
                                @(isSaving ? "Creating..." : "Create conversation")
                            </button>
                        </EditForm>
                    </div>
                </div>

                <div class="card panel-card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Active conversations</span>
                        <span class="badge rounded-pill text-bg-light border">@conversations.Count</span>
                    </div>
                    <div class="card-body p-0 conversation-list-shell">
                        @if (isLoading)
                        {
                            <p class="p-3 mb-0"><em>Loading...</em></p>
                        }
                        else if (conversations.Count == 0)
                        {
                            <p class="p-3 mb-0">No conversations yet.</p>
                        }
                        else
                        {
                            <div class="list-group list-group-flush conversation-list">
                                @foreach (var conversation in conversations)
                                {
                                    <button type="button"
                                            class="list-group-item list-group-item-action conversation-list-item @(conversation.Id == selectedConversationId ? "active" : string.Empty)"
                                            @onclick="() => OpenConversationAsync(conversation.Id)">
                                        <div class="fw-semibold text-truncate">@GetConversationTitle(conversation)</div>
                                        <div class="text-muted small text-truncate">@GetConversationParticipants(conversation)</div>
                                    </button>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-8">
                <div class="card panel-card chat-thread-card h-100">
                    <div class="card-header">Conversation</div>
                    <div class="card-body d-flex flex-column">
                        @if (selectedConversation is null)
                        {
                            <div class="empty-thread">
                                <p class="mb-1 fw-semibold">No conversation selected</p>
                                <p class="text-muted mb-0">Choose a conversation from the list to open it.</p>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex justify-content-between align-items-center mb-3 gap-2">
                                <div class="min-w-0">
                                    <h5 class="mb-1 text-truncate">@GetConversationTitle(selectedConversation)</h5>
                                    <div class="text-muted text-truncate">@GetConversationParticipants(selectedConversation)</div>
                                </div>
                                <span class="badge bg-secondary text-wrap thread-id">@selectedConversation.Id</span>
                            </div>

                            @if (isLoadingMessages)
                            {
                                <p><em>Loading messages...</em></p>
                            }
                            else if (messages.Count == 0)
                            {
                                <p class="text-muted">No messages yet.</p>
                            }
                            else
                            {
                                <div class="message-list">
                                    @foreach (var message in messages)
                                    {
                                        <div class="message-row @(CurrentUserState.CurrentUser?.Id == message.SenderId ? "is-own" : string.Empty)" id="@message.Id">
                                            <div class="message-bubble">
                                                <div class="d-flex justify-content-between align-items-start gap-2">
                                                    <strong>@GetUserLabel(message.SenderId)</strong>
                                                    <small class="text-muted text-nowrap">@message.SentAt.ToLocalTime().ToString("g")</small>
                                                </div>
                                                <div class="message-content">@message.Content</div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }

                            <EditForm class="mt-3 message-compose" Model="newMessage" OnValidSubmit="SendMessageAsync" FormName="send-message">
                                <DataAnnotationsValidator />
                                <ValidationSummary />

                                <div class="input-group">
                                    <InputText class="form-control"
                                               placeholder="Type a message..."
                                               @bind-Value="newMessage.Content" />
                                    <button class="btn btn-primary" type="submit" disabled="@isSending">
                                        @(isSending ? "Sending..." : "Send")
                                    </button>
                                </div>
                            </EditForm>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger mt-3">@errorMessage</div>
    }
}
