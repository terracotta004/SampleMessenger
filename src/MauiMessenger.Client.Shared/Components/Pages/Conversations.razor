@page "/conversations"
@using Microsoft.AspNetCore.SignalR.Client
@implements IAsyncDisposable

<PageTitle>Conversations</PageTitle>

<h1>Conversations</h1>

@if (CurrentUserState.CurrentUser is null)
{
    <div class="alert alert-warning">
        Please log in to view conversations.
        <a class="ms-2" href="login">Go to login</a>
    </div>
    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger mt-3">@errorMessage</div>
    }
}
else
{
    <div class="row">
        <div class="col-12 col-lg-4 mb-4 mb-lg-0">
            <div class="card mb-3">
                <div class="card-header">Start a new conversation</div>
                <div class="card-body">
                    <EditForm Model="newConversation" OnValidSubmit="CreateConversationAsync" FormName="create-conversation">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">User</label>
                            <InputSelect class="form-select" @bind-Value="newConversation.UserId">
                                <option value="">Select a user</option>
                                @foreach (var user in availableUsers)
                                {
                                    <option value="@user.Id">@user.DisplayName (@user.Username)</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Title (optional)</label>
                            <InputText class="form-control" @bind-Value="newConversation.Title" />
                        </div>

                        <button class="btn btn-primary" type="submit" disabled="@isSaving">
                            Create conversation
                        </button>
                    </EditForm>
                </div>
            </div>

            <div class="card">
                <div class="card-header">Active conversations</div>
                <div class="card-body p-0">
                    @if (isLoading)
                    {
                        <p class="p-3 mb-0"><em>Loading...</em></p>
                    }
                    else if (conversations.Count == 0)
                    {
                        <p class="p-3 mb-0">No conversations yet.</p>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var conversation in conversations)
                            {
                                <button type="button"
                                        class="list-group-item list-group-item-action @(conversation.Id == selectedConversationId ? "active" : string.Empty)"
                                        @onclick="() => OpenConversationAsync(conversation.Id)">
                                    <div class="fw-semibold">@GetConversationTitle(conversation)</div>
                                    <div class="text-muted small">@GetConversationParticipants(conversation)</div>
                                </button>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-8">
            <div class="card h-100">
                <div class="card-header">Conversation</div>
                <div class="card-body">
                    @if (selectedConversation is null)
                    {
                        <p class="text-muted mb-0">Select a conversation to open it.</p>
                    }
                    else
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h5 class="mb-1">@GetConversationTitle(selectedConversation)</h5>
                                <div class="text-muted">@GetConversationParticipants(selectedConversation)</div>
                            </div>
                            <span class="badge bg-secondary">@selectedConversation.Id</span>
                        </div>

                        @if (isLoadingMessages)
                        {
                            <p><em>Loading messages...</em></p>
                        }
                        else if (messages.Count == 0)
                        {
                            <p class="text-muted">No messages yet.</p>
                        }
                        else
                        {
                            <div class="list-group">
                                @foreach (var message in messages)
                                {
                                    <div class="list-group-item" id="@message.Id">
                                        @* @key="message.Id" *@
                                        <div class="d-flex justify-content-between">
                                            <strong>@GetUserLabel(message.SenderId)</strong>
                                            <small class="text-muted">@message.SentAt.ToLocalTime().ToString("g")</small>
                                        </div>
                                        <div>@message.Content</div>
                                    </div>
                                }
                            </div>
                        }

                        <EditForm class="mt-3" Model="newMessage" OnValidSubmit="SendMessageAsync" FormName="send-message">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <div class="input-group">
                                <InputText class="form-control"
                                           placeholder="Type a message..."
                                           @bind-Value="newMessage.Content" />
                                <button class="btn btn-primary" type="submit" disabled="@isSending">
                                    Send
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger mt-3">@errorMessage</div>
    }
}

